{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PlaneSign Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/planesign",
            "console": "integratedTerminal",
            "sudo": true
        },
        {
            "name": "PlaneSign Debug - devcontainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/planesign",
            "console": "integratedTerminal",
            "preLaunchTask": "Start nginx"
        },
        {
            "name": "Bluetooth Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "ble/planesign_ble.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Test Script",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "program": "${workspaceFolder}/test/test.py",
            "console": "integratedTerminal",
            "sudo": true
        }
    ]
}