{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "PlaneSign Debug - devcontainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/planesign",
            "console": "integratedTerminal"
        },
        {
            "name": "PlaneSign Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/planesign",
            "console": "integratedTerminal",
            "debugOptions": [
                "Sudo"
            ]
        },
        {
            "name": "Bluetooth Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "ble/planesign_ble.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Test Script",
            "type": "python",
            "justMyCode": false,
            "request": "launch",
            "program": "${workspaceFolder}/test/test.py",
            "console": "integratedTerminal",
            "debugOptions": [
                "Sudo"
            ]
        }
    ]
}