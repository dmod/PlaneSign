# wget https://ourairports.com/data/airports.csv

2x https://www.adafruit.com/product/2277

pip3 install pytz

make build-python
sudo make install-python

@reboot sleep 10 && cd /home/pi/PlaneSign && sudo python3 planesign.py>/dev/null 2>&1

NGINX Contents of /etc/nginx/sites-available/default:
server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /home/pi/PlaneSign/web;

        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location / {
                add_header 'Access-Control-Allow-Origin' '*';
                try_files $uri $uri/ =404;
        }
}
